
@{
    ViewBag.Title = "Gracias";
    ViewBag.gracias = "si";
}


<div class="main-content">
    <div class="bg-white py-3 py-md-4 mt-1">
        <div class="wrap text-center">
            <div class="title-group text-primary">
                <div class="icono">
                    <i class="icon-check-circle"></i>
                </div>
                <div class="texto">
                    <h1 class="tt-main"><span class="st text-secondary">Pedido</span> <span class="tt">Realizado</span></h1>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-3 mb-4" style="margin:0 auto; max-width: 640px; background-color:#fff; padding: 30px 15px">
        <div class="row pt-3 pb-4">
            <div class="col-md-9 col-lg-9 mx-auto text-center">
                <h3 class="mb-3">Pedido completado exitosamente</h3>
                <p class="text-muted">
                    ¡Gracias por preferirnos! <br />
                   
                </p>

                <div class="pt-4 mx-auto" style="width:200px">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-block mb-2">Ir a la página de inicio</a>
                    
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{

<script type="text/javascript">

    $(document).ready(function () {

        
        document.cookie = "cliente" + '=; Path=/; Expires=Thu, 01 Jan 1970 00:00:01 GMT;';
        

    });
</script>    
}

