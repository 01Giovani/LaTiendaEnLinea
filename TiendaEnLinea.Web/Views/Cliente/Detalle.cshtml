@model TiendaEnLinea.Core.DTOs.Cliente.ClienteInDTO

@{
    ViewBag.Title = "Index";
}




<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">

        <h2>Detalle de cliente</h2>

    </div>
</div>

<div class="wrapper wrapper-content">



    <form class="form-horizontal" action="@Url.Action("Detalle","Cliente")" method="post">

        @Html.ValidationSummary()
        @Html.HiddenFor(x => x.Codigo)

        <div class="form-group">
            <label class="col-lg-2 control-label">Nombre</label>
            <div class="col-lg-10">
                <div class="row">
                    <div class="col-md-4">

                        @Html.TextBoxFor(x => x.NombreCompleto, new { @class = "form-control", placeholder = "Nombre" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-lg-2 control-label">Teléfono</label>
            <div class="col-lg-10">
                <div class="row">
                    <div class="col-md-4">

                        @Html.TextBoxFor(x => x.Telefono, new { @class = "form-control", placeholder = "Teléfono", @readonly="readonly" })

                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-lg-2 control-label">DUI</label>
            <div class="col-lg-10">
                <div class="row">
                    <div class="col-md-4">

                        @Html.TextBoxFor(x => x.DUI, new { @class = "form-control", placeholder = "DUI" })

                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-lg-2 control-label">Dirección</label>
            <div class="col-lg-10">
                <div class="row">
                    <div class="col-md-4">

                        @Html.TextBoxFor(x => x.Direccion, new { @class = "form-control", placeholder = "Dirección" })

                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Guardar</button>
            </div>
        </div>

    </form>
</div>