@model TiendaEnLinea.Core.DTOs.Categoria.CategoriaProductoDTO

@{
    ViewBag.Title = "DetalleCategoria";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">

        <h2>Detalle de categoria</h2>

    </div>
</div>

<div class="wrapper wrapper-content">



    <form class="form-horizontal" action="@Url.Action("DetalleCategoria","CategoriaProducto")" method="post">

        @Html.ValidationSummary()
        @Html.HiddenFor(x => x.Codigo)

        <div class="form-group">
            <label class="col-lg-2 control-label">Nombre</label>
            <div class="col-lg-10">
                <div class="row">
                    <div class="col-md-4">

                        @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control", placeholder = "Nombre" })
                    </div>
                </div>
            </div>
        </div>


        <div class="form-group">
            <label class="col-lg-2 control-label">¿Producto activo?</label>
            <div class="col-lg-10">
                <div class="row">
                    <div class="col-md-4">

                        @Html.CheckBoxFor(x => x.Activo, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Guardar</button>
            </div>
        </div>
    </form>


</div>
